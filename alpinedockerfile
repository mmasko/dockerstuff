FROM alpine:latest

ARG user=ansible
ARG home=/home/$user
RUN adduser $user -D

RUN apk update && \
apk add --no-cache ansible git python3 && \
rm -rf /tmp/* && \
rm -rf /var/cache/apk/*

RUN git clone https://github.com/mmasko/dockerstuff.git && \
ansible-playbook dockerstuff/ansiblesetup.yml -vvvv
